<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc030303"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".SeekBarTestActivity">

    <cn.reee.reeeplayer.view.AdapterView.ZpLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--日期布局提示-->
        <cn.reee.reeeplayer.view.AdapterView.ZpLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="60px"
            android:layout_marginRight="60px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择日期"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19px"
                android:layout_weight="1"
                android:text="球场视频最多保留7日"
                android:textColor="#ff989898"
                android:textSize="12sp" />

            <cn.reee.reeeplayer.view.AdapterView.ZpLinearLayout
                android:id="@+id/to_full_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/im_to_full_screen"
                    android:layout_width="48px"
                    android:layout_height="30px"
                    android:src="@drawable/ic_to_full_screen" />

                <TextView
                    android:id="@+id/tv_to_full_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14px"
                    android:text="撑满屏幕"
                    android:textColor="#ffffffff"
                    android:textSize="16sp" />
            </cn.reee.reeeplayer.view.AdapterView.ZpLinearLayout>


        </cn.reee.reeeplayer.view.AdapterView.ZpLinearLayout>
        <!--日期布局列表-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="多角度切换"
            android:textColor="#ffffffff"
            android:textSize="16sp" />
        <!--多角度布局列表-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_angle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="切换相邻半场"
            android:textColor="#ffffffff"
            android:textSize="16sp" />
        <!--切换半场列表-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px" />
    </cn.reee.reeeplayer.view.AdapterView.ZpLinearLayout>

</ScrollView>